<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NormalTextViewStyle">
        <item name="android:textColor">@color/color_333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NormalEditTextStyle">
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/shape_normal_edittext</item>
        <item name="android:textColorHint">@color/color_333</item>
        <item name="android:textColor">@color/color_333</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NormalButtonStyle">
        <item name="android:layout_height">50dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">@drawable/shape_180_corner_009788_solid</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--选中底部tab字体样式-->
    <style name="ActiveBottomNavigationTextStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/color_009788</item>
    </style>

    <!--未选中底部tab字体样式-->
    <style name="InactiveBottomNavigationTextStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/color_262626</item>
    </style>
</resources>